{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "./apps/user-service/src/main",
  "compilerOptions": {
    "assets": [
      {
        "include": "email/templates/**/*",
        "outDir": "dist/apps/user-service/src"
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}